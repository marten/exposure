<% @title = @post.title %>

<h1>Editing post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Caption</b><br />
    <%= f.text_area :caption %>
  </p>

  <p>
    <b>Photo</b><br />
	<%= f.select :photo, @files, { :include_blank => true } %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
