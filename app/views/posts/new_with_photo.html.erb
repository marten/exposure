<h1>New post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Caption</b><br />
    <%= f.text_area :caption %>
  </p>

  <p>
    <b>Photo</b><br />
	<img src="/db/<%= @photo %>" width="100" />
	<a href="/posts/new">Change</a>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
